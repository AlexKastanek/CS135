#include <stdio.h>

int doubleNumber(int number) {

	number *= 2;

return number;
}

int main(void) {

	int input, number;

	printf("Please enter a whole number: ");
	scanf("%d", &input);

	number = doubleNumber(input);
	printf("Number doubled: %d\n", number);
	printf("Original input: %d\n", input);

return 0;
}
